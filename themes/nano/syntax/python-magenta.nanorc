## Python magenta-heavy overrides (applied after stock python.nanorc)
syntax "python" "\.py$" "SConstruct$" "SConscript$" "\.pyi$"

# Comments, decorators, defs/classes -> pink leaning
color brightmagenta,black  "^\s*#.*$"
color brightmagenta,black  "^\s*@\w+"
color brightmagenta,black  "\<(def|class)\>"

# Keywords, builtins: readable but pink-accented
color magenta,black        "\<(if|elif|else|for|while|try|except|finally|with|as|return|yield|import|from|pass|break|continue|raise|assert|lambda|global|nonlocal|match|case)\>"
color magenta,black        "\<(True|False|None)\>"
color magenta,black        "\<(print|len|range|open|map|zip|enumerate|isinstance|type|dir|vars|id|sum|min|max|any|all|sorted|reversed)\>"

# Strings & f-strings
color brightwhite,black    "\"([^\"\\]|\\.)*\"|'([^'\\]|\\.)*'"
color brightwhite,black    "f\"([^\"\\]|\\.)*\"|f'([^'\\]|\\.)*'"

# Numbers
color brightmagenta,black  "\<[0-9]+(\.[0-9]+)?([eE][+-]?[0-9]+)?\>"

# Dunder names / constants
color brightmagenta,black  "\<__[A-Za-z_]+__\>"

# TODO/HACK/NOTE in comments
icolor brightwhite,magenta "(TODO|FIXME|HACK|NOTE).*"
